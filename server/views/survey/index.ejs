<% include ../partials/header.ejs %>
<% include ../partials/main_nav.ejs %>

<main class="container min-vh-100 p-5">
  <div class="col justify-content-center text-center">
    <h1><%= title %></h1>
    <br>
    <p>Welcome to <%= title %></p>
  </div>
  <div class="row justify-content-center pb-4">
    <a href="/survey/create" class="btn btn-primary"><i class="fa fa-plus"></i> Create a Survey</a>
  </div>
  <table class="table table-bordered">
      <tr>
          <th>
              Survey Title
          </th>
          <th>
              Reponses
          </th>
          <th>
              Edit
          </th>
          <th>
              Delete
          </th>
      </tr>
      <% for(let count = 0; count <  surveys.length; count++) { %>
        <tr>
            <td>
                <a href="/survey/respond/<%= surveys[count]._id %>"> <%= surveys[count].title %> </a>
            </td>
            <td>
                <a href="/survey/responses/<%= surveys[count]._id %>" > View Reponses </a>
            </td>
            <td>
                <a href="survey/edit/<%= surveys[count]._id %>" class="btn btn-warning btn-sm">Edit Survey</a>
            </td>
            <td>
                <a href="survey/delete/<%= surveys[count]._id %>" class="btn btn-danger btn-sm" id="deleteContact"><i class="fas fa-trash-alt"></i> Delete</a>
            </td>
        </tr>
    <% } %>
  </table>
</main>

    
<% include ../partials/bottom_nav.ejs %>
<% include ../partials/footer.ejs %>